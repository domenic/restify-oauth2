{
    "name": "restify-oauth2",
    "description": "A simple OAuth 2 endpoint for Restify",
    "keywords": ["restify", "oauth", "oauth2", "rest", "authentication", "api"],
    "version": "2.2.0",
    "author": "Domenic Denicola <domenic@domenicdenicola.com> (http://domenicdenicola.com)",
    "license": "WTFPL",
    "repository": {
        "type": "git",
        "url": "git://github.com/domenic/restify-oauth2.git"
    },
    "bugs": "http://github.com/domenic/restify-oauth2/issues",
    "main": "lib/index.js",
    "scripts": {
        "test": "npm run test-ropc-unit && npm run test-cc-unit && npm run test-ropc-integration && npm run test-cc-integration",
        "test-ropc-unit": "node_modules/mocha/bin/mocha test/ropc-unit.coffee --reporter spec --compilers coffee:coffee-script/register",
        "test-cc-unit": "node_modules/mocha/bin/mocha test/cc-unit.coffee --reporter spec --compilers coffee:coffee-script/register",
        "test-ropc-integration": "node_modules/vows/bin/vows test/ropc-integration.coffee --spec",
        "test-cc-integration": "node_modules/vows/bin/vows test/cc-integration.coffee --spec",
        "lint": "node_modules/jshint/bin/jshint lib && node_modules/jshint/bin/jshint examples"
    },
    "dependencies": {
        "underscore": "1.x"
    },
    "peerDependencies": {
        "restify": "2.x"
    },
    "devDependencies": {
        "api-easy": ">= 0.3.8",
        "coffee-script": ">= 1.7.1",
        "chai": ">= 1.6.0",
        "jshint": ">= 2.1.2",
        "mocha": ">= 1.9.0",
        "restify": ">= 2.5.1",
        "sinon": ">= 1.7.2",
        "sinon-chai": ">= 2.4.0",
        "vows": ">= 0.7.0"
    }
}
